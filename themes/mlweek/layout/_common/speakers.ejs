<!-- Speakers -->
<div class="speakers widget-content" id="speakers">
	<div class="row">
		<div class="columns small-12 medium-12 large-12">
			<div class="center-content">
				<h2><%= lang.speakers.title %></h2>
				<div class="">
					<ul class="small-block-grid-1 medium-block-grid-2 large-block-grid-2">
						<!-- First Speacker -->
						<li>
							<div class="avatar">
								<img src="<%= lang.speakers.sp1.avatar %>" width="220" height="220" alt="Avatar1">
								<!-- Speaker media links -->
								<div class="social">
									<!-- Speacker profile / blog url -->
									<a href="<%= lang.speakers.sp1.blog %>" target="_blank">
										<i class="fa fa-user"></i>
									</a>

									<!-- Speacker Twitter URL -->
									<a href="<%= lang.speakers.sp1.twitter %>">
										<i class="fa fa-twitter"></i>
									</a>


								</div>
							</div>
							<div class="name"><a href="<%= lang.speakers.sp1.blog %>" target="_blank"><%= lang.speakers.sp1.fullname %></a></div>
							<div class="company"><a href="<%= lang.speakers.sp1.job_url %>" target="_blank"><%= lang.speakers.sp1.job_title %></a></div>
						</li>

						<!-- Second Speacker -->
						<li>
							<div class="avatar">
								<img src="<%= lang.speakers.sp2.avatar %>" width="220" height="220" alt="Avatar1">
								<!-- Speaker media links -->
								<div class="social">
									<!-- Speacker profile / blog url -->
									<a href="<%= lang.speakers.sp2.blog %>" target="_blank">
										<i class="fa fa-user"></i>
									</a>

									<!-- Speacker Twitter URL -->
									<a href="<%= lang.speakers.sp2.twitter %>" target="_blank">
										<i class="fa fa-twitter"></i>
									</a>


								</div>
							</div>
							<div class="name"><a href="<%= lang.speakers.sp2.blog %>" target="_blank"><%= lang.speakers.sp2.fullname %></a></div>
							<div class="company"><a href="<%= lang.speakers.sp2.job_url %>" target="_blank"><%= lang.speakers.sp2.job_title %></a></div>
						</li>


					</ul>
				</div>
			</div>
		</div>
	</div>
</div>
